# SmartSales AI - Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=SmartSales AI
ENVIRONMENT=development
DEBUG=True
VERSION=1.0.0

# =============================================================================
# DATABASE
# =============================================================================
# Development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./smartsales.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/smartsales

# =============================================================================
# SECURITY
# =============================================================================
# IMPORTANT: Change this in production!
SECRET_KEY=smart-sales-super-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# TWILIO / WHATSAPP
# =============================================================================
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# =============================================================================
# AI SERVICES
# =============================================================================
# Groq API for LLaMA inference
# Get your key from https://console.groq.com/
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# HuggingFace (optional, for embeddings)
HUGGINGFACE_API_KEY=

# =============================================================================
# VECTOR DATABASE (Optional)
# =============================================================================
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=smartsales-products

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# =============================================================================
# LANGUAGE SETTINGS
# =============================================================================
SUPPORTED_LANGUAGES=en,pcm,yo,ha,ig,ff,fr
DEFAULT_LANGUAGE=en

# =============================================================================
# AI AGENT SETTINGS
# =============================================================================
MAX_CONVERSATION_HISTORY=20
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1024

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
